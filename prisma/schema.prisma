generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(uuid())
  name        String
  category    String
  price       Float
  description String
  imageUrl    String
  slug        String   @unique
  createdAt   DateTime @default(now())
}

model Order {
  id           String      @id @default(uuid())
  customerName String
  email        String
  phone        String
  address      String
  city         String
  state        String?
  zipCode      String
  total        Float
  createdAt    DateTime    @default(now())
  items        OrderItem[]
}

model OrderItem {
  id                  String  @id @default(uuid())
  orderId             String
  productId           String
  productName         String
  quantity            Int
  includeCandle       Boolean @default(false)
  includeBirthdayCard Boolean @default(false)
  personalizedMessage String?
  price               Float
  order               Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
}
